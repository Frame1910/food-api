{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "lib": ["ESNext"],
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src/"]
}
